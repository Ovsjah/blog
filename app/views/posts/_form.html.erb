<%= form_with(model: post, local: true) do |form| %>
  <%= render "shared/error_messages", object: post %>
  <div class="fields">
    <%= form.label :category %><br>
    <%= form.select(:category_id, options_for_select(@categories, @current_category), prompt: "Select one!") %><br><br>
    <%= form.label :file %><br>
    <%= form.file_field :file %><br><br>
    <%= form.label :name %><br>
    <%= form.text_field :name, placeholder: "Type in the post's name", required: true %><br><br>
    <%= form.label :content %><br>
    <%= form.text_area :content, size: "60x12", placeholder: "Type in the post's content" %><br><br>
  </div>
  <div class="actions">
    <%= form.submit %><br><br>
  </div>
<% end %>
